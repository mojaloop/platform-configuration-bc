{
  "name": "@mojaloop/platform-configuration-bc-configuration-svc",
  "version": "0.0.1",
  "description": "mojaloop platform configuration service",
  "license": "Apache-2.0",
  "homepage": "https://github.com/mojaloop/platform-configuration-bc/tree/main/modules/configuration-svc",
  "private": true,
  "bugs": {
    "url": "https://github.com/mojaloop/platform-configuration-bc/issues#readme"
  },
  "contributors": [
    "Pedro Sousa Barreto <pedrosousabarreto@gmail.com>"
  ],
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "/dist"
  ],
  "pre-commit": [
    "dep:check",
    "build",
    "lint",
    "test:unit"
  ],
  "scripts": {
    "start": "yarn run service",
    "service": "tsc && node dist/application/index.js",
    "build": "tsc",
    "watch": "tsc -w",
    "clean": "rm -Rf dist",
    "clean:npm": "rm -Rf node_modules",
    "pretest": "yarn run build",
    "standard": "yarn run lint",
    "lint": "yarn run build && npx eslint ./src",
    "lint:fix": "yarn run build && npx eslint ./src --fix",
    "test:unit": "jest --passWithNoTests --testMatch '**/test/unit/**/*.test.ts'",
    "test:coverage": "jest --passWithNoTests --coverage --coverageThreshold='{}' --testMatch '**/test/unit/**/*.test.ts'",
    "test:coverage-check": "jest --coverage --testMatch '**/test/unit/**/*.test.ts'",
    "audit:resolve": "SHELL=sh resolve-audit",
    "audit:check": "SHELL=sh check-audit",
    "dep:check": "yarn run ncu -e 2",
    "dep:update": "yarn run ncu -u"
  },
  "dependencies": {
    "@mojaloop/auditing-bc-client-lib": "^0.0.3",
    "@mojaloop/auditing-bc-public-types-lib": "^0.0.4",
    "@mojaloop/logging-bc-client-lib": "^0.0.10",
    "@mojaloop/platform-configuration-bc-types-lib": "workspace:*",
    "express": "^4.18.0",
    "semver": "^7.3.7"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.29",
    "@types/node-cache": "^4.2.5",
    "@types/semver": "^7.3.9",
    "@typescript-eslint/eslint-plugin": "^5.21.0",
    "eslint": "^8.14.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard-with-typescript": "^21.0.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-standard": "^5.0.0",
    "jest": "^28.0.2",
    "jest-junit": "^13.2.0",
    "npm-audit-resolver": "^2.3.1",
    "npm-check-updates": "^12.5.9",
    "nyc": "^15.1.0",
    "pre-commit": "^1.2.2",
    "ts-jest": "^27.1.4",
    "typedoc": "^0.22.15",
    "typescript": "^4.5.0"
  }
}
