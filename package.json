{
  "name": "@mojaloop/platform-configuration-bc",
  "version": "0.0.1",
  "description": "mojaloop platform configuration bounded context.",
  "license": "Apache-2.0",
  "homepage": "https://github.com/mojaloop/platform-configuration-bc",
  "private": true,
  "bugs": {
    "url": "https://github.com/mojaloop/platform-configuration-bc/issues#readme"
  },
  "contributors": [
    "Pedro Sousa Barreto <pedrosousabarreto@gmail.com>"
  ],
  "scripts": {
    "prepare": "husky install",
    "start": "yarn workspaces foreach --parallel -v run start",
    "start:client-lib": "yarn workspace @mojaloop/platform-configuration-bc-client-lib run start",
    "start:configuration-svc": "yarn workspace @mojaloop/platform-configuration-bc-configuration-svc run start",
    "build": "yarn workspaces foreach -v run build",
    "watch": "yarn workspaces foreach --parallel -v run watch",
    "clean": "yarn run clean:dist",
    "clean:npm": "yarn workspaces foreach --parallel -v run clean:npm",
    "clean:dist": "yarn workspaces foreach --parallel -v run clean:dist",
    "pretest": "echo 'FIX ME'",
    "standard": "yarn run --no-progress --stream lint'",
    "lint": "yarn workspaces foreach -v run lint",
    "lint:fix": "yarn workspaces foreach -v run lint:fix",
    "test:unit": "yarn workspaces foreach -v run test:unit",
    "test:coverage": "yarn workspaces foreach --parallel -v run test:coverage",
    "test:coverage-check": "yarn workspaces foreach --parallel -v run test:coverage-check",
    "test:integration": "yarn workspaces foreach --parallel -v run test:integration",
    "audit:resolve": "yarn workspaces foreach --parallel -v run audit:resolve",
    "audit:check": "yarn workspaces foreach --parallel -v run audit:check",
    "dep:check": "yarn workspaces foreach --parallel -v run dep:check",
    "dep:update": "yarn workspaces foreach --parallel -v run dep:update",
    "publish:client-lib": "yarn workspace @mojaloop/platform-configuration-bc-client-lib run publish",
    "publish:types-lib": "yarn workspace @mojaloop/platform-configuration-bc-types-lib run publish"
  },
  "devDependencies": {
    "husky": "^7.0.4"
  },
  "workspaces": [
    "modules/*"
  ],
  "packageManager": "yarn@3.2.0"
}
