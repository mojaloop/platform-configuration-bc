{
  "name": "@mojaloop/platform-configuration-bc",
  "version": "0.0.1",
  "description": "mojaloop platform configuration bounded context.",
  "license": "Apache-2.0",
  "homepage": "https://github.com/mojaloop/platform-configuration-bc",
  "private": true,
  "bugs": {
    "url": "https://github.com/mojaloop/platform-configuration-bc/issues#readme"
  },
  "contributors": [
    "Pedro Sousa Barreto <pedrosousabarreto@gmail.com>"
  ],
  "scripts": {
    "prepare": "husky install",
    "start": "npm -ws --parallel -v run start",
    "start:client-lib": "npm -w @mojaloop/platform-configuration-bc-client-lib run start",
    "start:configuration-svc": "npm -w @mojaloop/platform-configuration-bc-configuration-svc run start",
    "build": "npm -ws run build",
    "watch": "npm -ws --parallel  run watch",
    "clean": "npm run clean:dist",
    "clean:npm": "rm -Rf node_modules && npm -ws --parallel  run clean:npm",
    "clean:dist": "npm -ws --parallel  run clean:dist",
    "pretest": "echo 'FIX ME'",
    "standard": "npm run --no-progress --stream lint'",
    "lint": "npm -ws run lint",
    "lint:fix": "npm -ws run lint:fix",
    "test:unit": "npm -ws run test:unit",
    "test:coverage": "npm -ws --parallel run test:coverage",
    "test:coverage-check": "npm -ws --parallel run test:coverage-check",
    "test:integration": "npm -ws --parallel run test:integration",
    "audit:resolve": "npm -ws --parallel run audit:resolve",
    "audit:check": "npm -ws --parallel run audit:check",
    "dep:check": "npm -ws --parallel run dep:check",
    "dep:update": "npm -ws --parallel run dep:update",
    "publish:client-lib": "npm -w @mojaloop/platform-configuration-bc-client-lib run npm_publish",
    "publish:types-lib": "npm -w @mojaloop/platform-configuration-bc-types-lib run npm_publish"
  },
  "devDependencies": {
    "@types/jest": "^27.0.3",
    "@types/node": "^16.11.9",
    "@typescript-eslint/eslint-plugin": "^5.36.1",
    "@typescript-eslint/parser": "^5.36.1",
    "eslint": "^8.14.0",
    "husky": "^7.0.4",
    "jest": "^27.3.1",
    "npm-check-updates": "^16.0.6",
    "ts-jest": "^27.0.7",
    "typescript": "^4.6.4"
  },
  "workspaces": [
    "modules/types-lib",
    "modules/*"
  ]
}
